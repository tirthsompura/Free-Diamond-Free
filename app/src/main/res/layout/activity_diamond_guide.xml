<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DiamondGuideActivity"
    android:background="#68AFC7"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        tools:ignore="MissingConstraints">
        <include layout="@layout/backtoolbar"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:orientation="vertical"
        android:gravity="top"
        android:paddingTop="5dp">

        <androidx.cardview.widget.CardView
            android:layout_width="90dp"
            android:layout_height="80dp"
            app:cardCornerRadius="25dp"
            android:layout_gravity="center_horizontal">
            <ImageView
                android:layout_width="90dp"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:background="@drawable/diamond">
            </ImageView>
        </androidx.cardview.widget.CardView>


<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:orientation="horizontal"
    android:gravity="center">

        <androidx.cardview.widget.CardView
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:cardCornerRadius="50dp"
            android:layout_gravity="center">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/doller">
            </ImageView>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="100dp"
            android:layout_height="25dp"
            app:cardCornerRadius="30dp"
            android:layout_gravity="center">
        <androidx.cardview.widget.CardView
            android:layout_width="97dp"
            android:layout_height="23dp"
            app:cardCornerRadius="30dp"
            app:cardBackgroundColor="#68AFC7"
            android:layout_gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="+9999999"
                android:textSize="18dp"
                android:textColor="@color/white"
                android:textStyle="bold">
            </TextView>

        </androidx.cardview.widget.CardView>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="15dp"
            android:layout_gravity="center"
            android:orientation="horizontal">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:textSize="10dp"
                android:text=" LEARNING "
                android:layout_gravity="center_vertical">
            </TextView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:textStyle="bold"
                android:textColor="#FFE87C"
                android:textSize="10dp"
                android:text="GUIDE "
                android:layout_gravity="center_vertical">
            </TextView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:textSize="10dp"
                android:text="OR "
                android:layout_gravity="center_vertical">
            </TextView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:textStyle="bold"
                android:textColor="#FFE87C"
                android:textSize="10dp"
                android:text="TIPS "
                android:layout_gravity="center_vertical">
            </TextView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:textSize="10dp"
                android:text="AND "
                android:layout_gravity="center_vertical">
            </TextView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:textStyle="bold"
                android:textColor="#FFE87C"
                android:textSize="10dp"
                android:text="TRICKES "
                android:layout_gravity="center_vertical">
            </TextView>
    </LinearLayout>
    </LinearLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="10sp"
        android:rowCount="1"
        android:columnCount="1">

        <androidx.cardview.widget.CardView
            android:id="@+id/tipstrickcard"
            android:layout_row="0"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_gravity="center|fill"
            android:layout_margin="5sp"
            app:cardCornerRadius="10sp">

            <androidx.cardview.widget.CardView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="20dp"
                app:cardBackgroundColor="@color/white">

                <ImageButton
                    android:id="@+id/tipsimg"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:background="@drawable/tipsimg" />
            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:textSize="12dp"
                android:text="Tips and Trick" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center"
                android:layout_marginTop="10dp"
                android:text="Free Guide"
                android:textColor="#aaa009"
                android:textSize="10dp" />

            <androidx.cardview.widget.CardView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical|end"
                android:layout_marginRight="10dp"
                app:cardBackgroundColor="#68AFC7"
                app:cardCornerRadius="30dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/ic_baseline_keyboard_arrow_right_24" />
            </androidx.cardview.widget.CardView>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/weaponscard"
            android:layout_gravity="center|fill"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            app:cardCornerRadius="10sp"
            android:layout_margin="5sp">
            <androidx.cardview.widget.CardView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="20dp"
                android:layout_gravity="center_vertical"
                app:cardBackgroundColor="@color/white">
                <ImageButton
                    android:id="@+id/Weapons"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:background="@drawable/weapons">
                </ImageButton>
            </androidx.cardview.widget.CardView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Weapons"
                android:layout_gravity="center_horizontal|center"
                android:gravity="center"
                android:textSize="12dp"
                android:layout_marginBottom="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center"
                android:layout_marginTop="10dp"
                android:text="Free Guide"
                android:textColor="#aaa009"
                android:textSize="10dp" />
            <androidx.cardview.widget.CardView
                android:layout_width="30dp"
                android:layout_height="30dp"
                app:cardBackgroundColor="#68AFC7"
                android:layout_gravity="center_vertical|end"
                android:layout_marginRight="10dp"
                app:cardCornerRadius="30dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/ic_baseline_keyboard_arrow_right_24" />
            </androidx.cardview.widget.CardView>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/charectorcard"
            android:layout_gravity="center|fill"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            app:cardCornerRadius="10sp"
            android:layout_margin="5sp">
            <androidx.cardview.widget.CardView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="20dp"
                android:layout_gravity="center_vertical"
                app:cardBackgroundColor="@color/white">
                <ImageButton
                    android:id="@+id/charector"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:background="@drawable/charector"/>
            </androidx.cardview.widget.CardView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center"
                android:gravity="center"
                android:layout_marginBottom="10dp"
                android:text="charectors"
                android:textSize="12dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Free Guide"
                android:textSize="10dp"
                android:layout_gravity="center_horizontal|center"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:textColor="#aaa009"/>
            <androidx.cardview.widget.CardView
                android:layout_width="30dp"
                android:layout_height="30dp"
                app:cardBackgroundColor="#68AFC7"
                android:layout_gravity="center_vertical|end"
                android:layout_marginRight="10dp"
                app:cardCornerRadius="30dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/ic_baseline_keyboard_arrow_right_24" />
            </androidx.cardview.widget.CardView>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/vehicalcard"
            android:layout_gravity="center|fill"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            app:cardCornerRadius="10sp"
            android:layout_margin="5sp">
            <androidx.cardview.widget.CardView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="20dp"
                android:layout_gravity="center_vertical"
                app:cardBackgroundColor="@color/white">
                <ImageButton
                    android:id="@+id/vehical"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:background="@drawable/vehical">
                </ImageButton>
            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center"
                android:layout_marginBottom="10dp"
                android:text="Vehicles"
                android:textSize="12dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Free Guide"
                android:textSize="10dp"
                android:layout_gravity="center_horizontal|center"
                android:layout_marginTop="10dp"
                android:textColor="#aaa009"/>
            <androidx.cardview.widget.CardView
                android:layout_width="30dp"
                android:layout_height="30dp"
                app:cardBackgroundColor="#68AFC7"
                android:layout_gravity="center_vertical|end"
                android:layout_marginRight="10dp"
                app:cardCornerRadius="30dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/ic_baseline_keyboard_arrow_right_24" />
            </androidx.cardview.widget.CardView>
        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:id="@+id/dianondcardview"
            android:layout_gravity="center|fill"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            app:cardCornerRadius="10sp"
            android:layout_margin="5sp">
            <androidx.cardview.widget.CardView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="20dp"
                android:layout_gravity="center_vertical"
                app:cardBackgroundColor="@color/white">
                <ImageButton
                    android:id="@+id/diamond"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:background="@drawable/diamond">
                </ImageButton>
            </androidx.cardview.widget.CardView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Diamonds"
                android:textStyle="bold"
                android:textColor="#aaa009"
                android:textSize="20dp"/>


                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="end|center"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/ic_baseline_keyboard_arrow_right_24"/>

        </androidx.cardview.widget.CardView>

    </GridLayout>
    </ScrollView>

    </LinearLayout>
